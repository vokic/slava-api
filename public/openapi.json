{
  "openapi": "3.0.3",
  "info": {
    "title": "Serbian Slava API",
    "version": "1.0.1",
    "description": "API to fetch Serbian slavas with optional filters for month(s) and date(s)."
  },
  "paths": {
    "/api/slavas": {
      "get": {
        "summary": "Get list of Serbian slavas",
        "description": "Retrieve all slavas or filter by single month, multiple months, and/or specific dates.",
        "tags": ["Slava API"],
        "parameters": [
          {
            "name": "month",
            "in": "query",
            "description": "Single numeric month filter with leading zero (e.g. '01'). Returns slavas in this month.",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^(0[1-9]|1[0-2])$"
            },
            "example": "01"
          },
          {
            "name": "months",
            "in": "query",
            "description": "Comma-separated list of months with leading zeros (e.g. '01,02,12'). Returns slavas in these months.",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^((0[1-9]|1[0-2])(,(0[1-9]|1[0-2]))*)$"
            },
            "example": "01,02,12"
          },
          {
            "name": "date",
            "in": "query",
            "description": "Comma-separated list of dates in 'D.M.' format (e.g. '1.1.,7.1.'). Returns slavas on these dates.",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^((\\d{1,2}\\.\\d{1,2}\\.?)(,(\\d{1,2}\\.\\d{1,2}\\.?)*)?)$"
            },
            "example": "1.1.,7.1."
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON object where each key is a month number (with leading zero) mapping to an array of slava objects.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Slava"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Slava": {
        "type": "object",
        "properties": {
          "month": {
            "type": "string",
            "description": "Month name in Serbian, if present",
            "example": "Januar"
          },
          "date": {
            "type": "string",
            "description": "Date in D.M. format, e.g., '1.1.'",
            "example": "1.1."
          },
          "julian_date": {
            "type": "string",
            "description": "Julian calendar date",
            "example": "19.12."
          },
          "events": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of events on this day"
          },
          "common": {
            "type": "string",
            "description": "Common or special occasion name (if any)",
            "example": "Božić"
          }
        },
        "required": ["date", "events"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Invalid query parameter: month must be between 01 and 12"
          }
        },
        "required": ["message"]
      }
    }
  }
}
